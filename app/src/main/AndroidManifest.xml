<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.student.miwok_stp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NumbersActivity"
            android:label="Numbers Activity"
            android:parentActivityName=".MainActivity"
            />
        <!--android:parentActivityName=".MainActivity" this attribute will employ a back button at the top of numbers activity
         which on pressing will redirect you to Main Activity-->
        <activity android:name=".PhrasesActivity"
            android:label="Phrases Activity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ColorsActivity"
            android:label="Colors Activity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".FamilyActivity"
            android:label="family Activity"
            android:parentActivityName=".MainActivity">

        </activity>
    </application>

</manifest>